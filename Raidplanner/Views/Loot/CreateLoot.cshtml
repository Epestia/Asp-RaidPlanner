@model Raidplanner.Models.Forms.CreateLootForm

@{
    ViewData["Title"] = "Create Loot";
}

<h2>Créer un nouveau Loot</h2>

<form asp-action="RegisterLoot" method="post" class="form-horizontal">
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="RaidId" class="control-label"></label>
        <select asp-for="RaidId" class="form-control">
            <option value="0">Selectionne un raid...</option>
            @foreach(RaidsModel raid in Model.Raids)
            {
                <option value="@raid.Id">@raid.Name</option>
            }
        </select>
        <span asp-validation-for="RaidId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Créer</button>
    </div>
</form>
