@model IEnumerable<Raidplanner.Models.Forms.CreateRaidsForm>

@{
    ViewData["Title"] = "Liste des Raids";
}

<h2>Liste des Raids</h2>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BossId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DJId)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BossId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DJId)
                </td>
            </tr>
        }
    </tbody>
</table>
